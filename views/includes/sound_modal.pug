#sound-modal.modal.fade(aria-hidden='true', aria-labelledby='sound-modal')
  .modal-dialog.modal-dialog-centered(role='document')
    .modal-content
      .modal-header
        h5.modal-title Sound Options
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
      .modal-body
        form#sound-modal-form.form-inline
          .form-group.col
            label(for='game-win-sound') Game Win volume
            input#game-win-sound.custom-range(type='range', min='0', max='1', step='0.1', value='0.2')
            label(for='game-over-sound') Game Over volume
            input#game-over-sound.custom-range(type='range', min='0', max='1', step='0.1', value='0.2')
            label(for='correct-sound') Correct guess volume
            input#correct-sound.custom-range(type='range', min='0', max='1', step='0.1', value='0.2')
            label(for='skip-sound') Skip volume
            input#skip-sound.custom-range(type='range', min='0', max='1', step='0.1', value='0.2')
          button#mute-all-sounds.btn.btn-warning Mute all
          button#reset-default-sound-options.btn.btn-secondary Reset Defaults
          button#save-sound-options.btn.btn-primary(data-dismiss='modal') Save
